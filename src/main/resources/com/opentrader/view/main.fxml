<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="main-pane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opentrader.controller.MainController">
   <top>
      <VBox>
         <MenuBar>
            <menus>
               <Menu text="File">
                  <items>
                     <MenuItem text="Exit" />
                  </items>
               </Menu>
               <Menu text="Window">
                  <items>
                     <MenuItem onAction="#handleNewChart" text="New Chart" />
                     <MenuItem onAction="#handleNewNews" text="News Feed" />
                  </items>
               </Menu>
               <Menu text="Help">
                  <items>
                     <MenuItem text="About" />
                  </items>
               </Menu>
            </menus>
         </MenuBar>
         <ToolBar>
            <items>
               <Button onAction="#handleNewChart" text="New Chart" />
               <Button onAction="#handleNewNews" text="News" />
               <Separator />
               <Label text="Market Status: Open" />
            </items>
         </ToolBar>
      </VBox>
   </top>
   <center>
      <javafx.scene.layout.AnchorPane fx:id="desktopPane" style="-fx-background-color: #1e1e1e;">
          <!-- Windows will be added here -->
      </javafx.scene.layout.AnchorPane>
   </center>
   <bottom>
      <Label text="Ready" BorderPane.alignment="CENTER_LEFT" />
   </bottom>
</BorderPane>
